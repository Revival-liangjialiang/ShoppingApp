<?xml version="1.0" encoding="utf-8"?>
<com.example.k.shoppingapp.Util.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/navigation"
    android:background="#FF6800"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    app:layout_widthPercent="15%w"
    >
    <ImageView
       android:layout_above="@+id/sao"
        android:layout_marginBottom="2dp"
        android:id="@+id/we_code_ImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_account_balance_black_24dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/sao"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:text="扫一扫"
        />
</RelativeLayout>
    <com.example.k.shoppingapp.Util.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_widthPercent="70%w"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_above="@+id/ok"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_change_history_black_24dp"
                />
            <TextView
                android:id="@+id/search_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="搜索你的宝贝..."
                android:textColor="#FFFFFF"
                android:layout_toRightOf="@+id/image"
                />
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="right"
                android:background="@drawable/xiangji"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="6%w"
            android:id="@+id/ok"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@drawable/tt"
            ></LinearLayout>
    </com.example.k.shoppingapp.Util.PercentRelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="15%w"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_build_black_24dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="消息"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>
</com.example.k.shoppingapp.Util.PercentLinearLayout>

